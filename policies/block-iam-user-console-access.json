{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DenyConsoleAccessForNonMarUsers",
            "Effect": "Deny",
            "Action": [
                "iam:CreateLoginProfile",
                "iam:UpdateLoginProfile"
            ],
            "NotResource": [
                "arn:aws:iam::*:user/*@marriott.com*",
                "arn:aws:iam::*:user/vmredtest"
            ]
        },
        {
            "Sid": "DenyPasswordChangeForNonMarUsers",
            "Effect": "Deny",
            "Action": "iam:ChangePassword",
            "Resource": "*",
            "Condition": {
                "ArnNotLike": {
                    "aws:PrincipalArn": [
                        "arn:aws:iam::*:user/*@marriott.com*",
                        "arn:aws:iam::*:role/*",
                        "arn:aws:iam::*:root"
                    ]
                }
            }
        }
    ]
}