{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DenyLambdaWithoutCSC",
            "Effect": "Deny",
            "Action": [
                "lambda:CreateFunction"
            ],
            "Resource": "*",
            "Condition": {
                "Null": {
                    "lambda:CodeSigningConfigArn": "true"
                },
                "StringNotEqualsIfExists": {
                    "aws:RequestTag/AllowWithoutCSC": "true"
                },
                "ArnNotLike": {
                    "aws:PrincipalArn": "arn:aws:iam::*:role/*ControlTower*"
                }
            }
        }
    ]
}