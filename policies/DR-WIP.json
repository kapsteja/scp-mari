{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Deny",
            "Action": [
                "ec2:CreateVolume"
            ],
            "Resource": "*",
            "Condition": {
                "BoolIfExists": {
                    "ec2:Encrypted": "false"
                },
                "StringNotEquals": {
                    "aws:RequestTag/AWSElasticDisasterRecoveryManaged": "drs.amazonaws.com"
                },
                "ForAllValues:StringNotEquals": {
                    "aws:RequestTag/DRSRecoveryType": [
                        "DRILL_INSTANCE",
                        "RECOVERY_INSTANCE"
                    ]
                }
            }
        },
        {
            "Sid": "PreventEc2MountUnencryptedVolume",
            "Effect": "Deny",
            "Action": "ec2:RunInstances",
            "Resource": "arn:aws:ec2:*:*:volume/*",
            "Condition": {
                "BoolIfExists": {
                    "ec2:Encrypted": "false"
                },
                "StringNotEquals": {
                    "aws:RequestTag/AWSElasticDisasterRecoveryManaged": "drs.amazonaws.com"
                },
                "ForAllValues:StringNotEquals": {
                    "aws:RequestTag/DRSRecoveryType": [
                        "DRILL_INSTANCE",
                        "RECOVERY_INSTANCE"
                    ]
                }
            }
        },
        {
            "Sid": "StatementForOtherRDS",
            "Effect": "Deny",
            "Action": [
                "rds:CreateDBInstance"
            ],
            "Resource": [
                "*"
            ],
            "Condition": {
                "ForAnyValue:StringEquals": {
                    "rds:DatabaseEngine": [
                        "mariadb",
                        "mysql",
                        "oracle-ee",
                        "oracle-se2",
                        "oracle-se1",
                        "oracle-se",
                        "postgres",
                        "sqlserver-ee",
                        "sqlserver-se",
                        "sqlserver-ex",
                        "sqlserver-web"
                    ]
                },
                "Bool": {
                    "rds:StorageEncrypted": "false"
                }
            }
        },
        {
            "Sid": "StatementForAurora",
            "Effect": "Deny",
            "Action": [
                "rds:CreateDBCluster"
            ],
            "Resource": [
                "*"
            ],
            "Condition": {
                "Bool": {
                    "rds:StorageEncrypted": "false"
                }
            }
        },
        {
            "Sid": "DenyTagUpdates",
            "Effect": "Deny",
            "Action": [
                "ec2:CreateTags"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:instance/*"
            ],
            "Condition": {
                "StringNotEquals": {
                    "aws:username": "AWSServiceRoleForElasticDisasterRecovery"
                },
                "StringLike": {
                    "aws:RequestTag/AWSElasticDisasterRecoveryManaged": "drs.amazonaws.com"
                },
                "ForAllValues:StringLike": {
                    "aws:RequestTag/DRSRecoveryType": [
                        "DRILL_INSTANCE",
                        "RECOVERY_INSTANCE"
                    ]
                }
            }
        },
        {
            "Sid": "DenyTagUpdatesonvolume",
            "Effect": "Deny",
            "Action": [
                "ec2:CreateTags"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:volume/*"
            ],
            "Condition": {
                "StringNotEquals": {
                    "aws:username": "AWSServiceRoleForElasticDisasterRecovery"
                },
                "StringLike": {
                    "aws:RequestTag/AWSElasticDisasterRecoveryManaged": "drs.amazonaws.com"
                }
            }
        },
        {
            "Sid": "PreventSnapshotDeletionDRS",
            "Effect": "Deny",
            "Action": "ec2:DeleteSnapshot",
            "Resource": "arn:aws:ec2:*:*:snapshot/*",
            "Condition": {
                "StringNotEquals": {
                    "aws:RequestTag/AWSElasticDisasterRecoveryManaged": "drs.amazonaws.com",
                    "aws:username": "AWSServiceRoleForElasticDisasterRecovery"
                }
            }
        },
        {
            "Sid": "PreventDRSserverdelete",
            "Effect": "Deny",
            "Action": [
                "drs:DeleteSourceServer",
                "drs:DisconnectSourceServer"
            ],
            "Resource": [
                "*"
            ],
            "Condition": {
                "ArnNotLike": {
                    "aws:PrincipalArn": [
                        "arn:aws:iam::*:role/aws-reserved/sso.amazonaws.com/AWSReservedSSO_mi-ps-agrp-micp-aws-dr*"
                    ]
                }
            }
        }
    ]
}